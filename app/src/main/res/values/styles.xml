<resources>

    <style name="Theme.Citizen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorS4HGreyLight</item>
        <item name="toolbarStyle">@style/Widget.Citizen.Toolbar</item>
        <item name="preferenceCategoryStyle">@style/Theme.Citizen.AppSettings.Category.Material
        </item>
        <item name="preferenceFragmentCompatStyle">
            @style/Theme.Citizen.AppSettings.Fragment.Material
        </item>
        <item name="preferenceStyle">@style/Theme.Citizen.AppSettings.Preference.Material</item>
        <item name="preferenceTheme">@style/preferences</item>
    </style>

    <style name="Theme.Citizen.AppSettings.Category.Material" parent="Preference.Category.Material">
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">false</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Theme.Citizen.AppSettings.Fragment.Material" parent="PreferenceFragment.Material">
        <item name="allowDividerAfterLastItem">true</item>
    </style>

    <style name="Theme.Citizen.AppSettings.Preference.Material" parent="Preference.Material">
        <item name="allowDividerAbove">true</item>
        <item name="allowDividerBelow">true</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Widget.Citizen.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Citizen.Widget.Toolbar.Title</item>
    </style>


    <style name="TextAppearance.Citizen.Widget.Toolbar.Title" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/primus</item>
        <item name="android:textSize">7pt</item>
        <item name="android:textColor">@color/colorS4HDarkBlue</item>
    </style>

    <style name="Widget.Citizen.Button" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">32dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorS4HDarkBlue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/primus_bold</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:drawableEnd">@drawable/ic_button_circle_orange</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="preferences"></style>

    <style name="Drawer">
        <item name="background">@color/colorS4HGreyLight</item>
    </style>

    <style name="MenuItem" parent="Theme.Citizen">
        <item name="android:fontFamily">@font/primus</item>
        <item name="android:textSize">6pt</item>
        <item name="android:textColor">@color/colorS4HDarkBlue</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

