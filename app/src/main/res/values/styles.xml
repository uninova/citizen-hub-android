    <style name="DialogSwitch">
        <item name="android:textColor">@color/colorS4HDarkBlue</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlActivated">@color/colorS4HDarkBlue</item>
        <item name="colorSwitchThumbNormal">@color/colorS4HDarkBlue</item>
        <item name="android:colorForeground">@color/colorS4HDarkBlue</item>
        <item name="fontWeight">700</item>
        <item name="android:fontFamily">@font/primus</item>
    </style>

    <!-- Model 2 -->
    <style name="SummaryCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="cardCornerRadius">14dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SummaryCardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/corner_frame_14dp</item>
        <item name="android:backgroundTint">@color/colorS4HDarkBlue</item>
        <item name="android:backgroundTintMode">add</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SummaryCardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorS4HDarkBlue</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/colorS4HWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/primus</item>
    </style>

    <style name="SummaryCardBody">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="SummaryCardImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="SummaryCardInformation">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="SummaryCardInformationRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="SummaryCardInformationText">
        <item name="android:fontFamily">@font/neosanspro</item>
        <item name="android:textColor">@color/colorS4HDarkBlue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SummaryCardInformationText.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SummaryCardInformationText.Value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/colorS4HLightBlue</item>
    </style>

    <style name="CalendarHeaderText">
        <item name="android:fontFamily">@font/primus</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarWeekDayText">
        <item name="android:fontFamily">@font/neosanspro</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CalendarDateText">
        <item name="android:fontFamily">@font/primus</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BluetoothAndLocationRequestsTextView" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/colorS4HDarkGreyVariant</item>
        <item name="android:fontFamily">@font/primus</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableStart">@android:drawable/ic_dialog_alert</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>

    <style name="switchCompatStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="thumbTint">@color/thumb_selector</item>
        <item name="trackTint">@color/track_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>

    /* Styles used for the report */
    <style name="ReportDetailValueType">
        <item name="android:fontFamily">@font/neosanspro</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">5.9pt</item>
        <item name="android:textColor">@color/colorS4HTurquoise</item>
    </style>

    <style name="ReportDetailValue">
        <item name="android:fontFamily">@font/neo_sans_pro_bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">5.9pt</item>
        <item name="android:textColor">@color/colorS4HDarkBlue</item>
    </style>

    <style name="ReportDetailUnits">
        <item name="android:fontFamily">@font/neosanspro</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">5.9pt</item>
        <item name="android:textColor">@color/colorS4HDarkBlue</item>
    </style>

    <style name="SummaryDetailPrimaryTabLayout">
        <item name="fontWeight">700</item>
        <item name="android:fontFamily">@font/neo_sans_pro_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
