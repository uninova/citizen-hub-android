<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorS4HLightBlue</item>
        <item name="colorPrimaryDark">@color/colorS4HDarkBlue</item>
        <item name="colorAccent">@color/colorS4HTurquoise</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="LatoRegularForDrawerTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AppTheme.Summary"/>
    <style name="AppTheme.Summary.Item">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="AppTheme.Summary.Item.ImageView">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="AppTheme.Summary.Item.TextView">
        <item name="android:fontFamily">@font/roboto_slab</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorS4HDarkBlue</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>