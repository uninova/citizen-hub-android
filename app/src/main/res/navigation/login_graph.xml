<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/login_graph.xml"
    app:startDestination="@id/entryPageFragment">

    <fragment
        android:id="@+id/entryPageFragment"
        android:name="pt.uninova.s4h.citizenhub.EntryFragment"
        android:label="EntryPageFragment">
        <action
            android:id="@+id/action_entryPageFragment_to_presentationFragment"
            app:destination="@id/presentationFragment"
            />
        <action
            android:id="@+id/action_entryPageFragment_to_authenticationFragment"
            app:destination="@id/authenticationFragment" />
    </fragment>
    <fragment
        android:id="@+id/authenticationFragment"
        android:name="pt.uninova.s4h.citizenhub.AuthenticationFragment"
        android:label="AuthenticationFragment">
    </fragment>
    <fragment
        android:id="@+id/presentationFragment"
        android:name="pt.uninova.s4h.citizenhub.PresentationFragment"
        android:label="PresentationFragment" >
        <action
            android:id="@+id/action_presentationFragment_to_authenticationFragment"
            app:destination="@id/authenticationFragment" />
    </fragment>

</navigation>