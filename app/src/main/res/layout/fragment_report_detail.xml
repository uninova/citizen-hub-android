<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        tools:context=".ReportDetailFragment">


        <TextView
            android:id="@+id/fragment_report_detail_view_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/primus"
            android:paddingVertical="20dp"
            android:text="@string/fragment_report_text_view_no_data_summary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline3" />

        <TextView
            android:id="@+id/StepsTitle"
            style="@style/ReportDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:tag="steps"
            android:text="Steps"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CaloriesTotalVal" />

        <TextView
            android:id="@+id/StepsTotalVal"
            style="@style/ReportDetailValueType"
            android:tag="steps"
            android:text="Total Steps: "
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/CaloriesTotalVal"
            app:layout_constraintTop_toBottomOf="@+id/StepsTitle" />

        <TextView
            android:id="@+id/fragment_report_detail_steps_total"
            style="@style/ReportDetailValue"
            android:tag="steps"
            android:text="0"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/StepsTotalVal"
            app:layout_constraintStart_toEndOf="@+id/StepsTotalVal" />


        <androidx.constraintlayout.widget.Group
            android:id="@+id/stepsGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="StepsTotalVal,fragment_report_detail_steps_total,StepsTitle" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/caloriesGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="CaloriesTotalVal,caloriesTitle,fragment_report_detail_calories_total" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/distanceGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="fragment_report_detail_distance_total,DistanceTotalVal,DistanceTitle" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/hearRateGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="HeartRateMinVal,fragment_report_detail_heart_rate_min,fragment_report_detail_heart_rate_average,HeartRateAvgVal,fragment_report_detail_heart_rate_max,HeartRateMaxVal,HeartRateTitle" />

        <TextView
            android:id="@+id/fragment_report_detail_text_view_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:fontFamily="@font/neo_sans_pro_bold"
            android:text="10 June"
            android:textAlignment="center"
            android:textColor="@color/colorS4HDarkBlue"
            android:textSize="20sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_report_detail_text_view_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/primus_bold"
            android:text="2021"
            android:textAlignment="center"
            android:textColor="@color/colorS4HOrange"
            android:textSize="15sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/fragment_report_detail_text_view_day"
            app:layout_constraintTop_toBottomOf="@+id/fragment_report_detail_text_view_day" />

        <TextView
            android:id="@+id/fragment_report_detail_recorded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:background="@drawable/button_rounded_right_side"
            android:fontFamily="@font/neo_sans_pro_bold"
            android:paddingHorizontal="20dp"
            android:paddingVertical="2dp"
            android:text="Recorded"
            android:textAlignment="center"
            android:textColor="@color/colorS4HWhite"
            android:textSize="15sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_report_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_rounded_right_side"
            android:fontFamily="@font/neo_sans_pro_bold"
            android:paddingHorizontal="20dp"
            android:paddingVertical="2dp"
            android:text="Daily Report"
            android:textAlignment="center"
            android:textColor="@color/colorS4HWhite"
            android:textSize="30sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/HeartRateTitle"
            style="@style/ReportDetailTitle"
            android:layout_marginTop="28dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:tag="heartrate"
            android:text="Heart Rate"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline3"
            app:layout_goneMarginStart="100dp" />

        <TextView
            android:id="@+id/DistanceTitle"
            style="@style/ReportDetailTitle"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:tag="distance"
            android:text="Distance"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/HeartRateMinVal" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Smart4Health PDF upload"
            android:textAlignment="center"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/StepsTitle" />

        <TextView
            android:id="@+id/HeartRateAvgVal"
            style="@style/ReportDetailValueType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="heartrate"
            android:text="Maximum Value:"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/HeartRateMaxVal"
            app:layout_constraintTop_toBottomOf="@+id/HeartRateMaxVal" />

        <TextView
            android:id="@+id/HeartRateMinVal"
            style="@style/ReportDetailValueType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="heartrate"
            android:text="Minimum Value:"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/HeartRateAvgVal"
            app:layout_constraintTop_toBottomOf="@+id/HeartRateAvgVal" />

        <TextView
            android:id="@+id/fragment_report_detail_heart_rate_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:tag="heartrate"
            android:text="0"
            android:textColor="@color/colorS4HDarkBlue"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/HeartRateAvgVal"
            app:layout_constraintStart_toEndOf="@+id/HeartRateAvgVal"
            app:layout_constraintTop_toTopOf="@+id/HeartRateAvgVal"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/HeartRateMaxVal"
            style="@style/ReportDetailValueType"
            android:tag="heartrate"
            android:text="Average:"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/fragment_report_detail_recorded"
            app:layout_constraintTop_toBottomOf="@+id/HeartRateTitle" />

        <TextView
            android:id="@+id/fragment_report_detail_heart_rate_average"
            style="@style/ReportDetailValue"
            android:tag="heartrate"
            android:text="0"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/HeartRateMaxVal"
            app:layout_constraintStart_toEndOf="@+id/HeartRateMaxVal" />

        <TextView
            android:id="@+id/fragment_report_detail_heart_rate_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:tag="heartrate"
            android:text="0"
            android:textColor="@color/colorS4HDarkBlue"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/HeartRateMinVal"
            app:layout_constraintStart_toEndOf="@+id/HeartRateMinVal"
            app:layout_constraintTop_toTopOf="@+id/HeartRateMinVal"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/DistanceTotalVal"
            style="@style/ReportDetailValueType"
            android:tag="distance"
            android:text="Total Distance: "
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/HeartRateMinVal"
            app:layout_constraintTop_toBottomOf="@+id/DistanceTitle" />

        <TextView
            android:id="@+id/fragment_report_detail_distance_total"
            style="@style/ReportDetailValue"
            android:tag="distance"
            android:text="0"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/DistanceTotalVal"
            app:layout_constraintStart_toEndOf="@+id/DistanceTotalVal" />

        <TextView
            android:id="@+id/CaloriesTotalVal"
            style="@style/ReportDetailValueType"
            android:tag="calories"
            android:text="Total Calories: "
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/DistanceTotalVal"
            app:layout_constraintTop_toBottomOf="@+id/caloriesTitle" />

        <TextView
            android:id="@+id/fragment_report_detail_calories_total"
            style="@style/ReportDetailValue"
            android:tag="calories"
            android:text="0"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/CaloriesTotalVal"
            app:layout_constraintStart_toEndOf="@+id/CaloriesTotalVal" />

        <TextView
            android:id="@+id/caloriesTitle"
            style="@style/ReportDetailTitle"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="60dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:tag="calories"
            android:text="Calories"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/StepsTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DistanceTotalVal" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="182dp"
            android:layout_marginEnd="411dp"
            android:layout_marginBottom="606dp"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_begin="182dp"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>