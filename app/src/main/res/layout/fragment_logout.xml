<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_s4h"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/content_description_fragment_logout_imageView_s4h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_s4h_logo_png"
        android:scaleType="fitCenter"
        android:layout_marginTop="128dp" />

    <TextView
            android:fontFamily="@font/neosanspro"
            android:id="@+id/textView_logOut"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="64dp"
            android:layout_width="match_parent"
            android:text="@string/fragment_logout_textView_logOut_text"
            android:textAlignment="center"
        android:textSize="6pt"
        app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_s4h"
    />

    <Button
        android:id="@+id/button_logOut"
        style="@style/Widget.Citizen.Button"
        android:layout_width="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/fragment_logout_button_logOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_logOut" />

</androidx.constraintlayout.widget.ConstraintLayout>