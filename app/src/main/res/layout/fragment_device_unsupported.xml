<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutUnsupportedDeviceConfiguration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutUnsupportedDeviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textUnsupportedDevice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/fragment_device_unsupported_name"
            android:textColor="@color/colorS4HDarkBlue"
            android:fontFamily="@font/primus_bold"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutUnsupportedDeviceAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/textUnsupportedDeviceAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/layout_fragment_device_unsupported_address"
            android:textColor="@color/colorS4HDarkBlue"
            android:fontFamily="@font/primus_bold"
            android:textSize="24sp" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutUnsupportedMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textUnsupportedDeviceMessage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/fragment_device_unsupported_message"
                android:fontFamily="@font/neo_sans_pro_medium"
                android:textAlignment="center"
                android:textSize="18sp"
                android:src="@drawable/ic_devices_unpaired"
                />
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>