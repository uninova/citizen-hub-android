<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeviceConfigurationFragment">

    <LinearLayout
        android:id="@+id/layoutConfigurationTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/fragment_device_configuration"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutConfiguration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/layoutConfigurationTop">


        <LinearLayout
            android:id="@+id/layoutButtonConfiguration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <ProgressBar
                android:id="@+id/add_pprogressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/colorS4HLightBlue"
                android:indeterminateTintMode="src_atop"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/buttonConfiguration"
                app:layout_constraintEnd_toStartOf="@+id/buttonConfiguration"
                app:layout_constraintTop_toTopOf="@id/buttonConfiguration"
                tools:targetApi="lollipop" />

            <Button
                android:id="@+id/buttonConfiguration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_configuration_text_view_connect" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>