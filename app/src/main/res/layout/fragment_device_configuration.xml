<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    tools:context=".DeviceConfigurationFragment">

    <LinearLayout
        android:id="@+id/layoutConfiguration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutConfigurationNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textConfigurationDeviceNameLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/layout_fragment_device_configuration_name"
                android:textColor="@color/colorS4HDarkBlue"
                android:fontFamily="@font/neo_sans_pro_bold"
                android:textSize="24sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutConfigurationNameValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textConfigurationDeviceNameValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/layout_device_configuration_device_name_value"
                android:textColor="@color/colorS4HLightBlue"
                android:fontFamily="@font/neosanspro_regular"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutConfigurationAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textConfigurationDeviceAddressLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/layout_device_configuration_device_address_label"
                android:textColor="@color/colorS4HDarkBlue"
                android:fontFamily="@font/neo_sans_pro_bold"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutConfigurationAddressLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textConfigurationAddressValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/layout_device_configuration_device_address_value"
                android:textColor="@color/colorS4HLightBlue"
                android:fontFamily="@font/neosanspro_regular"
                android:textSize="24sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layoutConfigurationMeasurements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textConfigurationMeasurements"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                style="@style/AdvancedConfigurationFragmentCategoryTextView"
                android:text="@string/layout_fragment_device_configuration_features"
          />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutConfigurationSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ListView
                android:id="@+id/listViewFeature"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                style="@style/AppTheme.Summary.Item.TextView"
                android:divider="@null"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>