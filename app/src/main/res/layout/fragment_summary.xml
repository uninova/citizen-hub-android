<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".SummaryFragment"
        tools:ignore="UseCompoundDrawables">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:id="@+id/fragment_summary_layout_posture"
                style="@style/AppTheme.Summary.Item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_bottom_outline_darkblue"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/fragment_summary_layout_distance"
                app:layout_constraintEnd_toEndOf="@+id/fragment_summary_layout_distance"
                app:layout_constraintStart_toStartOf="@+id/fragment_summary_layout_distance"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintVertical_weight="1">

                <ImageView
                    android:id="@+id/fragment_summary_image_view_posture"
                    style="@style/AppTheme.Summary.Item.ImageView"
                    android:contentDescription="@string/fragment_summary_image_view_posture_content_description"
                    android:padding="100dp"
                    android:scaleType="center"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    app:srcCompat="@drawable/ic_time_sitting" />

                <TextView
                    android:id="@+id/fragment_summary_text_view_posture"
                    style="@style/AppTheme.Summary.Item.TextView"
                    android:text="@string/fragment_summary_text_view_posture_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_summary_layout_distance"
                style="@style/AppTheme.Summary.Item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_bottom_outline_darkblue"
                app:layout_constraintBottom_toTopOf="@+id/fragment_summary_layout_steps"
                app:layout_constraintEnd_toEndOf="@+id/fragment_summary_layout_steps"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/fragment_summary_layout_steps"
                app:layout_constraintTop_toBottomOf="@+id/fragment_summary_layout_posture">

                <ImageView
                    android:id="@+id/fragment_summary_image_view_distance"
                    style="@style/AppTheme.Summary.Item.ImageView"
                    android:layout_width="190dp"
                    android:layout_marginStart="15dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/fragment_summary_image_view_distance_content_description"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_distance" />

                <TextView
                    android:id="@+id/fragment_summary_text_view_distance"
                    style="@style/AppTheme.Summary.Item.TextView"
                    android:text="@string/fragment_summary_text_view_distance_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_summary_layout_steps"
                style="@style/AppTheme.Summary.Item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_bottom_outline_darkblue"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/fragment_summary_layout_calories"
                app:layout_constraintEnd_toEndOf="@+id/fragment_summary_layout_calories"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/fragment_summary_layout_calories"
                app:layout_constraintTop_toBottomOf="@+id/fragment_summary_layout_distance">

                <ImageView
                    android:id="@+id/fragment_summary_image_view_steps"
                    style="@style/AppTheme.Summary.Item.ImageView"
                    android:layout_width="fill_parent"
                    android:layout_marginStart="-10dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/fragment_summary_image_view_steps_content_description"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_steps_item" />

                <TextView
                    android:id="@+id/fragment_summary_text_view_steps"
                    style="@style/AppTheme.Summary.Item.TextView"
                    android:text="@string/fragment_summary_text_view_steps_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_summary_layout_calories"
                style="@style/AppTheme.Summary.Item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_bottom_outline_darkblue"
                app:layout_constraintBottom_toTopOf="@+id/fragment_summary_layout_heart_rate"
                app:layout_constraintEnd_toEndOf="@+id/fragment_summary_layout_heart_rate"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/fragment_summary_layout_heart_rate"
                app:layout_constraintTop_toBottomOf="@+id/fragment_summary_layout_steps">

                <ImageView
                    android:id="@+id/fragment_summary_image_view_calories"
                    style="@style/AppTheme.Summary.Item.ImageView"
                    android:layout_width="fill_parent"
                    android:layout_marginStart="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_calories" />

                <TextView
                    android:id="@+id/fragment_summary_text_view_calories"
                    style="@style/AppTheme.Summary.Item.TextView"
                    android:text="@string/fragment_summary_text_view_calories_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_summary_layout_heart_rate"
                style="@style/AppTheme.Summary.Item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_bottom_outline_darkblue"
                app:layout_constraintBottom_toTopOf="@+id/fragment_summary_layout_no_data"
                app:layout_constraintEnd_toEndOf="@+id/fragment_summary_layout_no_data"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/fragment_summary_layout_no_data"
                app:layout_constraintTop_toBottomOf="@+id/fragment_summary_layout_calories">

                <ImageView
                    android:id="@+id/fragment_summary_image_view_heart_rate"
                    style="@style/AppTheme.Summary.Item.ImageView"
                    android:layout_width="fill_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_heartbeat" />

                <TextView
                    android:id="@+id/fragment_summary_text_view_heart_rate"
                    style="@style/AppTheme.Summary.Item.TextView"
                    android:text="@string/fragment_summary_text_view_heart_rate_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_summary_layout_no_data"
                style="@style/AppTheme.Summary.Item"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_summary_layout_heart_rate">

                <TextView
                    android:id="@+id/fragment_summary_text_view_no_data"
                    style="@style/AppTheme.Summary.Item.TextView"
                    android:text="@string/fragment_report_text_view_no_data_summary" />
            </LinearLayout>

            <TextView
                android:id="@+id/sittingTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_top_darkblue"
                android:text="    Sitting with Good Posture"
                android:textColor="@color/colorS4HWhite"
                android:textSize="16dp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/fragment_summary_layout_posture"
                app:layout_constraintEnd_toEndOf="@+id/fragment_summary_layout_posture"
                app:layout_constraintStart_toStartOf="@+id/fragment_summary_layout_posture" />

            <TextView
                android:id="@+id/distanceWalkedTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_top_darkblue"
                android:text="    Distance Walked"
                android:textColor="@color/colorS4HWhite"
                android:textSize="16dp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/fragment_summary_layout_distance"
                app:layout_constraintEnd_toEndOf="@+id/fragment_summary_layout_distance"
                app:layout_constraintStart_toStartOf="@+id/fragment_summary_layout_distance" />

            <TextView
                android:id="@+id/stepsTakenTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_top_darkblue"
                android:text="    Steps Taken"
                android:textColor="@color/colorS4HWhite"
                android:textSize="16dp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/fragment_summary_layout_steps"
                app:layout_constraintEnd_toEndOf="@+id/fragment_summary_layout_steps"
                app:layout_constraintStart_toStartOf="@+id/fragment_summary_layout_steps" />

            <TextView
                android:id="@+id/caloriesTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_top_darkblue"
                android:text="    Kilocalories Burned"
                android:textColor="@color/colorS4HWhite"
                android:textSize="16dp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/fragment_summary_layout_calories"
                app:layout_constraintEnd_toEndOf="@+id/fragment_summary_layout_calories"
                app:layout_constraintStart_toStartOf="@+id/fragment_summary_layout_calories" />

            <TextView
                android:id="@+id/heartrateTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_top_darkblue"
                android:text="    Kilocalories Burned"
                android:textColor="@color/colorS4HWhite"
                android:textSize="16dp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/fragment_summary_layout_heart_rate"
                app:layout_constraintEnd_toEndOf="@+id/fragment_summary_layout_heart_rate"
                app:layout_constraintStart_toStartOf="@+id/fragment_summary_layout_heart_rate" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>